{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{#if done}}
                <a href="/task/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
                {{else}}
                <a href="/task/{{_id}}/toggleDone" class="btn btn-success">Done</a>
                {{/if}}
                <a href="/task/{{_id}}/delete" class="btn btn-danger">Delete</a>
                <a href="/task/{{_id}}/edit" class="btn btn-info">Edit</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<div class="h-100 d-flex aling-items-center justify-content-center mt-5">
    <div class="text-center text-white">
        <h1>No tasks</h1>
        <img src="/icons/empty.svg" class="w-75">
    </div>
</div>
{{/if}}